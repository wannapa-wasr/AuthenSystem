@page
@model LoginModel
@{
    Layout = null;
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="~/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <link rel="stylesheet" href="~/css/adminlte.min.css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
        </div>
        <h3 class="login-box-msg">User Management System</h3>
        <!--Start Card-->
        <div class="card">
            <!--Start Card body-->
            <div class="card-body login-card-body">
                <p class="login-box-msg">Login to start UMS</p>
                <!--Start Form Login-->
                <form id="account" method="post">
                    <!--Start Input Email-->
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    <div class="input-group mb-3">
                        <input asp-for="Input.Email" class="form-control" placeholder="email" />
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <!--End Input Email-->
                    <!--Start Input Password-->
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    <div class="input-group mb-3">
                        <input asp-for="Input.Password" class="form-control" placeholder="password" />
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <!--End Input Password-->
                    <!--Start Hyperlink-->
                    <a href="/Identity/Account/ForgotPassword" class="text-center">I forgot my password</a><br>
                    <a href="/Identity/Account/Register" class="text-center">Register a new membership</a>
                    <a href="/Identity/Account/ResetPassword" class="text-center">Reset Password</a>
                    <!--End Hyperlink-->
                    <div class="row">
                        <!--Start Checkbox Remember Me-->
                        <div class="col-8">
                            <div class="icheck-primary">
                                <input type="checkbox" id="remember">
                                <label for="remember">
                                    Remember Me
                                </label>
                            </div>
                        </div>
                        <!--End Checkbox Remember Me-->
                        <!--Start Button Login-->
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block">Login</button>
                        </div>
                        <!--Endt Button Login-->
                    </div>
                    <div asp-validation-summary="All" class="text-danger small"></div>
                </form>
                <!--End Form Login-->
                <!--Start Social media Login-->
                <div class="social-auth-links text-center">
                    <p>- OR -</p>
                    <a class="btn btn-block btn-danger" asp-controller="Account" asp-action="GoogleLogin">
                        <i class="fab fa-google-plus mr-2"></i>
                        Log In With Google
                    </a>
                    <a class="btn btn-block btn-primary" asp-controller="#" asp-action="#">
                        <i class="fab fa-facebook mr-2"></i>
                        Log In With Facebook
                    </a>
                    <a class="btn btn-block btn-secondary" asp-controller="#" asp-action="#">
                        <i class="fas fa-th-large mr-2"></i>
                        Log In With Microsoft
                    </a>
                </div>
                <!--End Social media Login-->
            </div>
            <!--End Card body-->
        </div>
        <!--End Card-->
    </div>

    <script src="~/plugins/jquery/jquery.min.js"></script>
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/adminlte.min.js"></script>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

</body>
</html>
